rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      allow read;
      allow write,update: if request.auth.uid==uid ;
    }
    match /games/{document=**} {
    	allow read;
      allow write,update,delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
    match /posts/{uid} {
    	allow read;
      allow write: if request.auth!=null;
      allow delete,update: if request.auth.uid==uid;
    }
  }
}